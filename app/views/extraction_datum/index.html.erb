<%= extends :basic_panel do %>
  <%= extends :basic_panel_heading do %>
    <h1> Extraction <%= @extraction.created_at %> </h1>
    <div class="row">
      <div class="col-md-6">
        <ol class="breadcrumb">
          <li><%= link_to(@project.name, project_scripts_path(@project.id))%></li>
          <li><%= link_to(@script.name, project_script_path(@project.id, @script.id))%></li>
        </ol>
      </div>
    </div>
  <% end %>
  <%= extends :basic_panel_body do %>
   <table class="table table-striped table-hover">
      <thead>
      <tr>
        <th> <%= t('extraction_datum.columns.field') %> </th>
        <th> <%= t('extraction_datum.columns.value') %> </th>
        <th> <%= 'instance_id' %> </th>
        <th> <%= 'parent_id' %> </th>
      </tr>
      </thead>
      <tbody>
        <% @extraction_datum.sort_by { |data| data.instance_id }.each do |d| %>
        <tr>
          <td> <%= d.field_name %> </td>
          <td> <%= d.value %> </td>
          <td> <%= d.instance_id %> </td>
          <td> <%= d.instance.parent_id %> </td>
        </tr>
      <% end%>
      </tbody>
    </table>
  <% end %>
<% end %>
