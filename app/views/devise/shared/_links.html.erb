<%- if ['sessions', 'registrations'].exclude?(controller_name) %>
  <%= link_to t('auth.login.header'), new_session_path(resource_name), class: 'shared-link' %>
<% end -%>

<%- if devise_mapping.registerable? && ['sessions', 'registrations'].exclude?(controller_name) %>
  <%= link_to t('auth.register.header'), new_registration_path(resource_name), class: 'shared-link' %>
<% end -%>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <%= link_to t('auth.forgot.header'), new_password_path(resource_name), class: 'shared-link' %>
<% end -%>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <%= link_to t('auth.confirm.did_not'), new_confirmation_path(resource_name), class: 'shared-link' %>
<% end -%>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to t('auth.unlock.did_not'), new_unlock_path(resource_name), class: 'shared-link' %>
<% end -%>

<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <%= link_to "Sign in with #{provider.to_s.titleize}", omniauth_authorize_path(resource_name, provider), class: 'shared-link' %>
  <% end -%>
<% end -%>
