<div class="container col-md-offset-1 col-md-4 login-form login">
    <h2><%=t('auth.login.header')%></h2>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>
      <%= alert if alert %>
      <div class="field">
        <%= f.label :email %>
        <%= f.email_field :email, autofocus: true, class: 'form-control', placeholder: t('auth.register.email_placeholder') %>
      </div>
      <div class="field">
        <%= f.label :password %>
        <%= f.password_field :password, autocomplete: "off", class: 'form-control', placeholder: t('auth.register.password_placeholder') %>
      </div>
      <% if devise_mapping.rememberable? -%>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end -%>
      <div class="login-group">
        <%= f.submit t('auth.login.submit'), class: "btn btn-primary" %>
        <%= link_to t('auth.register.header'), new_registration_path(resource_name), class: 'btn' %>
      </div>
      <%= render "devise/shared/links" %>
    <% end %>
</div>
<div class="col-md-6">
  <div class="sign-in-label">
    <span><img  class="logo" src="/webx/assets/logo.png" width="120px"></span>
    <span><%=t('auth.login.info1')%></span>
    <span class="phrase"><%=t('auth.login.info2')%></span>
  </div>
</div>