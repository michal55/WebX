<div class="sign-in-label">
  <span>able to discover?</span>
  <span class="phrase">yes we are</span>
</div>
<div class="container col-md-offset-4 col-md-4 login-form">
    <h2>Sign up</h2>
    <div class="form-group">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

        <%= f.label :email %>
        <%= f.email_field :email, autofocus: true, class: 'form-control', placeholder: 'enter your email'%>

        <%= f.label :password %>
        <% if @validatable %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %>
        <%= f.password_field :password, autocomplete: "off", class: 'form-control', placeholder: 'type password' %>

        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control', placeholder: 'retype password' %>

        <div>
        <%= f.submit "Sign up", class: "btn btn-primary" %>
        <%= render "devise/shared/links" %>
        </div>
    <% end %>

    
    </div>
</div>