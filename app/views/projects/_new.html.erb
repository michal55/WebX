<tr class="active-tr">
      <td>
        <%= form_for(@project_new) do |f|  %>
        <%= f.text_field(
        	:name,
        	class: 'form-control',
        	placeholder: t('projects.placeholder_new'),
        	:'ng-model' => "mapper.names['new_project']",
        	:required => true
        ) %>
      </td>
      <td></td>
      <td>
      	<%= button_tag '',
	      type: 'submit',
	      class: 'btn btn-default glyphicon glyphicon-floppy-disk btn-lg table-button',
	      :'ng-show' => "mapper.names['new_project']",
	      :'ng-click' => "save('new_project')"
	    %>
    </td>
    <% end %>
</tr>