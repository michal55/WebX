<div class="container">
  <div class="panel-group">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h1><%=t('projects.index')%></h1>
        <%= link_to(t('projects.new_button'), new_project_path, class: "btn btn-primary" )%>
      </div>
      <div class="panel-body">
        <table class="table table-striped table-hover">
          <thead>
          <tr>
            <th>
              <%=t('projects.columns.name')%>
            </th>
            <th>
              <%=t('projects.columns.scripts')%>
            </th>
          </tr>
          </thead>
          <tbody>
          <% @projects.each do |p| %>
              <tr>
                <td>
                  <%=link_to(p.name, edit_project_path(p.id) )%>
                </td>
                <td>
                  <%=link_to(t('projects.columns.action'), project_scripts_path(p.id) )%>
                </td>
              </tr>
          <% end%>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>