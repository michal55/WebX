<%= extends :basic_panel do %>
  <%= extends :basic_panel_heading do %>
    <h1><%=t('projects.index')%></h1>
  <% end %>
  <%= extends :basic_panel_body do %>
    <%= render 'application/flash' %>
    <table class="table table-striped table-hover">
      <thead>
      <tr>
        <th> <%=t('projects.columns.name')%> </th>
        <th> <%=t('projects.columns.scripts')%> </th>
        <th class="action-icon"></th>
      </tr>
      </thead>
      <tbody>
      <%= render 'projects/new'%>
      <% @projects.each do |p| %>
        <tr>
          <td> <%=link_to(p.name, project_path(p.id) )%> </td>
          <td> <%= p.scripts.length %> </td>
          <td class="action-icon" >
            <span class="table-button">
              <%= link_to('', project_path(p.id), method: :delete , class: 'btn btn-default glyphicon glyphicon-remove table-button')%>
            </span>
          </td>
        </tr>
      <% end%>
      </tbody>
    </table>
  <% end %>
<% end %>
