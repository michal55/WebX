<%= extends :basic_panel do %>
  <%= extends :basic_panel_heading do %>
    <h1><%=t('projects.index')%></h1>
    <%= link_to(t('projects.new_button'), new_project_path, class: "btn btn-primary" )%>
  <% end %>
  <%= extends :basic_panel_body do %>
    <% if @projects.length == 0 %>
      <%= t('projects.no_projects')%>
    <% else %>
      <table class="table table-striped table-hover">
        <thead>
        <tr>
          <th> <%=t('projects.columns.name')%> </th>
          <th> <%=t('projects.columns.scripts')%> </th>
          <th></th>
        </tr>
        </thead>
        <tbody>
        <% @projects.each do |p| %>
          <tr>
            <td> <%=link_to(p.name, project_path(p.id) )%> </td>
            <td> <%= p.scripts.length %> </td>
            <td>
              <%= link_to project_path(p.id), method: :delete do %>
                <span class="glyphicon glyphicon-erase"></span>
              <% end %>
            </td>
          </tr>
        <% end%>
        </tbody>
      </table>
    <% end %>
  <% end %>
<% end %>
