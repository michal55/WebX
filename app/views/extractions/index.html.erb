<%= extends :basic_panel do %>
  <%= extends :basic_panel_heading do %>
    <h1> <%= @script.name %> <%= t('extractions.index') %> </h1>
  <% end %>
  <%= extends :basic_panel_body do %>
    <table class="table table-striped table-hover">
      <thead>
      <tr>
        <th> <%= t('extractions.columns.executed') %> </th>
        <th> <%= t('extractions.columns.execution_time') %></th>
        <th> <%= t('extractions.columns.status') %></th>
        <th> <%= t('data_schemas.columns.action') %></th>
      </tr>
      </thead>
      <tbody>
        <% @extraction.each do |e| %>
          <tr>
            <td> <%=link_to(e.created_at, project_script_extraction_extraction_datum_index_path(@project.id, @script.id, e.id) )%> </td>
            <td> <%= format_time e.execution_time %></td>
            <td class="<%= find_class e.success %>"> <%= extraction_status e.success %></td>
            <td> <%= link_to t('extraction_datum.index'), project_script_extraction_extraction_datum_index_path(@project.id, @script.id, e.id) %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% end %>
<% end %>
