<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th class="name-input"><%=t('scripts.columns.name')%></th>
      <th><%= t('scripts.columns.extract') %></th>
      <th class="action-icon"></th>
    </tr>
  </thead>
  <tbody>
  <%= render 'scripts/new'%>
  <% @scripts.each do |s| %>
    <tr>
      <td class="name-input"><%=link_to(s.name, project_script_path(@project.id, s.id) )%></td>
      <td><%= link_to s.extractions.length, project_script_extractions_path(@project.id, s.id) %></td>
      <td class="action-icon" >
        <span class="table-button">
          <%= link_to('', project_script_path(@project.id, s.id), method: :delete, class: 'btn btn-default glyphicon glyphicon-remove table-button') %>
        </span>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>
