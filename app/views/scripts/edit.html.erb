<%= extends :basic_form do %>
  <%= form_for([@project, @script], :url => project_script_path(@project,@script)) do |f|  %>
    <h1><%= t('scripts.edit') %></h1>
    <%= f.label(:name) %>
    <%= f.text_field(:name, class: 'form-control') %>
    <%= link_to(t('buttons.delete'), project_script_path, method: :delete, class: 'btn btn-danger btn-block') %>
    <div class="login-group">
      <%= f.submit(t('buttons.submit'), class: 'btn btn-primary') %>
      <%= link_to(t('buttons.back'), project_script_path(@project.id, @script.id), class: 'btn') %>
    </div>
  <% end %>
<% end %>

