<h3>Last extraction: <%= extraction.created_at %></h3>
<%= extends :basic_panel_body do %>
    <table class="table table-striped table-hover">
      <tbody>
        <tr>
          <td> <%= t('extractions.columns.execution_time') %> </td>
          <td> <%= format_time extraction.execution_time %></td>
        </tr>
        <tr>
          <td> <%= t('extractions.columns.instances') %> </td>
          <td> <%= count_of_instances extraction %></td>
        </tr>
        <tr>
          <td> <%= t('extractions.columns.empty_fields') %> </td>
          <td> <%= count_of_empty_fields extraction %></td>
        </tr>
        <tr>
          <td> <%= t('extractions.columns.status') %> </td>
          <td> <%= extraction_status extraction.success %></td>
        </tr>
      </tbody>
    </table>
<% end %>