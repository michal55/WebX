<h4>
  <%= link_to project_script_extraction_extraction_datum_index_path(@project.id, @script.id, extraction.id) do %>
      <span>Last extraction: <%= extraction.created_at.strftime(t('time.format_extended')) %>
        <i class="glyphicon glyphicon-link"></i>
      </span>
  <% end %>
</h4>
<table class="table table-striped table-hover">
  <tbody>
    <tr>
      <td> <%= t('extractions.columns.execution_time') %> </td>
      <td> <%= format_time extraction.execution_time %></td>
    </tr>
    <tr>
      <td> <%= t('extractions.columns.instances') %> </td>
      <td> <%= instance_count extraction %></td>
    </tr>
    <tr>
      <td> <%= t('extractions.columns.empty_fields') %> </td>
      <td> <%= empty_fields_count extraction %></td>
    </tr>
    <tr>
      <td> <%= t('extractions.columns.status') %> </td>
      <td> <%= extraction_status extraction.success %></td>
    </tr>
  </tbody>
</table>


<h4><%= t('extractions.columns.header_table') %></h4>
<table class="table table-striped table-hover">
  <thead>
  <tr>
    <th> <%= t('data_fields.index') %> </th>
    <th> <%= t('extractions.columns.empty_fields') %></th>
  </tr>
  </thead>
  <tbody>
  <% data_field = DataField.where(project_id: @project.id) %>
  <% data_field.each do |d| %>
  <tr>
    <td> <%= d.name %> </td>
    <td> <%= empty_fields_per_field_count d, extraction  %></td>
  </tr>
  <% end %>
  </tbody>
</table>
