<%= extends :basic_panel do %>
  <%= extends :basic_panel_heading do %>
    <h1><%=t('scripts.index')%></h1>
    <%= link_to(t('scripts.new_button'), new_project_script_path, class: "btn btn-primary" )%>
  <% end %>
  <%= extends :basic_panel_body do %>
    <table class="table table-striped table-hover">
      <thead>
      <tr>
        <th>
          <%=t('scripts.columns.name')%>
        </th>
      </tr>
      </thead>
      <tbody>
      <% @scripts.each do |s| %>
        <tr>
          <td>
            <%=link_to(s.name, edit_project_script_path(@project.id, s.id) )%>
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>
  <% end %>
<% end %>