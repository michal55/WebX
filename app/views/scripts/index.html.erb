<div class="container">
  <div class="panel-group">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h1><%=t('scripts.index')%></h1>
        <%= link_to(t('scripts.new_button'), new_project_script_path, class: "btn btn-primary" )%>
      </div>
      <div class="panel-body">
        <table class="table table-striped table-hover">
          <thead>
            <tr>
              <th>
                <%=t('scripts.columns.name')%>
              </th>
            </tr>
          </thead>
          <tbody>
            <% @scripts.each do |s| %>
                <tr>
                	<td>
	  					<%=link_to(s.name, edit_project_script_path(@project.id, s.id) )%>
	  				</td>
                </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>