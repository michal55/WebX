<tr class="active-tr">
  <td>
    <%= form_for([@project, @script_new], :url => project_scripts_path(@project)) do |f|  %>
    <%= f.text_field(
      :name,
      class: 'form-control',
      placeholder: t('scripts.placeholder_new'),
      :'ng-model' => "mapper.names['new_script']",
      :required => true
      )
    %>
  </td>
  <td></td>
  <td>
  	<%= button_tag "",
      type: 'submit',
      class: 'btn btn-default glyphicon glyphicon-floppy-disk btn-lg table-button',
      :'ng-show' => "mapper.names['new_script']",
      :'ng-click' => "save('new_script')"
    %>
  	</td>
  <% end %>
</tr>
