<table class="table table-striped table-hover">
  <thead>
  <tr>
    <th> <%=t('data_schemas.columns.name')%> </th>
    <th> <%=t('data_schemas.columns.type')%> </th>
    <th> </th>
  </tr>
  </thead>
  <tbody>
  <%= render 'data_schemas/new'%>
  <% @data_schema.each do |d| %>
    <tr>
      <td> <%=link_to(d.name, edit_project_data_schema_path(@project.id, d.id) )%> </td>
      <td style="width:200px" > <%= d.data_type%> </td>
      <td>
        <%= link_to project_data_schema_path(@project.id, d.id), method: :delete do %>
          <span class="glyphicon glyphicon-erase"></span>
        <% end %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>
