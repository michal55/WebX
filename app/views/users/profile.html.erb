<%= extends :basic_panel do %>
  <%= extends :basic_panel_heading do %>
    <h1><%= @user.name %> <%= @user.surname %></h1>
  <% end %>
  <%= extends :basic_panel_body do %>
    <h3><%= @user.email %></h3>
    <p>Joined: <%= @user.created_at.strftime(t('time.format')) %></p>
    <p>
      API key:
      <code><%= @user.api_key%></code>
    </p>
    <%= form_tag(action: :refresh_api_key) do  %>
      <%= submit_tag(t('buttons.refresh_api_key'), class: 'btn btn-primary') %>
    <% end %>
  <% end %>
<% end %>
