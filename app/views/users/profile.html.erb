<div class="container">
  <div class="col-md-4">
    <div class="row">
      <div class="col-md-12">
        <h2><%= @user.name %></h2>
      </div>
      <div class="col-md-12">
        <h2><%= @user.surname %></h2>
      </div>
      <div class="col-md-12">
        <h3><%= @user.email %></h3>
      </div>
      <div class="col-md-12">
        <p>Joined: <%= @user.created_at.strftime("%d/%m/%Y") %></p>
      </div>
    </div>
  </div>

  <div class="col-md-6">
    <div class="row">
      <h2><%= t('projects.index') %></h2>
    </div>
  </div>
</div>