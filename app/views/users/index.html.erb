<% provide :title, t('user.index.title') %>
<div class="container">
  <div class="panel-group">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h1><%=t('users.header')%></h1>
      </div>
      <div class="panel-body">
        <table class="table table-striped table-hover">
          <thead>
            <tr>
              <th>
                <%=t('users.table_email')%>
              </th>
              <th>
                <%=t('users.table_role')%>
              </th>
              <th>
                <%=t('users.table_date')%>
              </th>
            </tr>
          </thead>
          <tbody>
            <% @users.each do |user| %>
              <tr>
                <%= render 'user_row', user: user %>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>