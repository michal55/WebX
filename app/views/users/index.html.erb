<% provide :title, t('user.index.title') %>
<div class="container">
  <h1> All users </h1>
  <div class="row">
    <div class="col-md-4">
      <h3>E-mail</h3>
    </div>
    <div class="col-md-4">
      <h3>Role</h3>
    </div>
    <div class="col-md-4">
      <h3>Date of registration</h3>
    </div>
  </div>
  <% @users.each do |user| %>
      <div class="row">
        <%= render 'user', user: user %>
      </div>
  <% end %>
</div>