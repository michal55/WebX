}

.extraction-success {
  color: limegreen;
}

.extraction-fail {
  color: red;
}

.extraction-running {
    color: orange;
}

.editable {
    height: 40px;
	transition-property: padding-left;
	padding-left: 24px;
	background: linear-gradient(to right, rgba(255,255,255,0.93) , rgba(255,255,255,0));
	border: none;
	&:not(:focus) {
		background: transparent;
		box-shadow: none;
		cursor: pointer;
		padding-left: 0px;
		background-position: 10%;
		color: $primary-color;
		&:hover {
			padding-left: 24px;
			background-image: url(<%= Rails.configuration.relative_url_root + '/assets/pencil.png' %>);
			background-size: 20px;
			background-repeat: no-repeat;
			background-position: 0%;
		}
	}
