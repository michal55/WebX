.container {
	//max-height: 20px;
}
.container-flash {
  max-height: 20px;
}
.navbar {
	background-color: $primary-color;
	border-radius: 0 0 0 0;
	border: 0;
	border-bottom: 3px solid $secondary-color;
	border-image: linear-gradient(to right, $primary-color, $secondary-color);
	border-image-slice: 1;
	margin-bottom: 0px;

	a {
		color: $primary-color;

		&:hover {
			color: $secondary-color;
		}
	}
}

.navbar-default {
	.navbar-brand, .navbar-nav li a {
		color: white;
		&:hover {
			color: $secondary-color;
		}
	}
}

.btn-primary {
	background-color: $secondary-color;
	border-color: $secondary-color*1.1;
	color: $primary-color;

	&:hover {
		background-color: $secondary-color*0.8;
		border-color: $secondary-color*0.9;
	}
}

.btn-danger {
	&:hover {
		background-color: $primary-color;
		border-color: $primary-color*0.8;
		color: $danger !important;
	}
}

.form-control:focus {
  border-color: $primary-color;
  box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0.1), 0 0 8px $light-max;
}

.panel-default {
	.panel-heading {
		background-color: $light-medium;
		border-top: 3px solid $secondary-color;
		border-image: linear-gradient(to right, $primary-color, $secondary-color);
  		border-image-slice: 1;
  		border-left: 0;
  		border-right: 0;
  		background-image: url(<%= Rails.configuration.relative_url_root + '/assets/main.jpg' %>);
	}
}

.panel {
	border: 0;
}

.table-scrollable {
  display: block;
  overflow-x: auto;
}

